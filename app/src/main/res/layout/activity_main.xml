<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#8ebf3f">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Fungal Blight"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#010101"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/disease"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="Symptoms: \n     &#8226;Brown Spots with Yellow Halo \n     &#8226;Leaf Withering"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="15dp"
        android:textColor="#010101"
        android:textSize="20dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Treatments:"
        android:id="@+id/textView4"
        android:textColor="#010101"
        android:textSize="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Method 3: Prevention"
        android:id="@+id/button"
        android:textColor="#010101"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Method 2: Treatment"
        android:id="@+id/button2"
        android:textColor="#010101"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/textView" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Method 1: Treatment"
        android:id="@+id/button3"
        android:textColor="#010101"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/textView" />


</RelativeLayout>
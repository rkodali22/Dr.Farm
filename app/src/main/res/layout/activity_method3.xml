<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.prathik1.drfarm.Method3"
    android:background="#8ebf3f">

    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="Weed the soil"
        android:id="@+id/checkBox6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="Water only when necessary to prevent fungal growth"
        android:id="@+id/checkBox7"
        android:textSize="20dp"
        android:layout_below="@+id/checkBox6"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="Remove any excess leaves"
        android:id="@+id/checkBox8"
        android:textSize="20dp"
        android:layout_below="@+id/checkBox7"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="Rotate crops frequently in each growing season"
        android:id="@+id/checkBox9"
        android:textSize="20dp"
        android:layout_below="@+id/checkBox8"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Prevention"
        android:id="@+id/textView5"
        android:textColor="#010101"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
